{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://architects-toolkit.github.io/ghjson-spec/schema/v1.0/extensions/gh.valuelist.schema.json",
  "title": "GhJSON Extension: gh.valuelist (v1.0)",
  "type": "object",
  "properties": {
    "listMode": { "type": "string" },
    "listItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "expression": { "type": "string" },
          "selected": { "type": "boolean" }
        },
        "required": ["name", "expression"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
