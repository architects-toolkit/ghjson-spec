{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://architects-toolkit.github.io/ghjson-spec/schema/v1.0/extensions/gh.panel.schema.json",
  "title": "GhJSON Extension: gh.panel (v1.0)",
  "type": "object",
  "properties": {
    "value": { "type": "string" },
    "multiline": { "type": "boolean" },
    "wrap": { "type": "boolean" },
    "alignment": { "type": "integer" },
    "bounds": { "type": "string" },
    "font": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "size": { "type": "number" },
        "bold": { "type": "boolean" },
        "italic": { "type": "boolean" }
      },
      "required": ["name", "size"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
